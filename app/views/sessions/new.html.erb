<div class="max-w-sm mx-auto p-3">
  <% if alert = flash[:alert] %>
    <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block" id="alert"><%= alert %></p>
  <% end %>

  <% if notice = flash[:notice] %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl mb-6">Sign up</h1>

  <%= form_with url: session_url, class: "flex flex-col gap-2" do |form| %>
    <div class="form-control">
      <div class="label">
        <label id="email-input" class="label-text">Email</label>
      </div>
      <%= form.email_field :email_address, id: "email-input", class: "input", required: false, autofocus: true, autocomplete: "username", placeholder: "Enter your email address", value: params[:email_address] %>
    </div>

    <div class="form-control">
      <div class="label">
        <label for="password-input" class="label-text">Password</label>
        <%= link_to "Forgot password?", new_password_path, class: "label-text-alt link" %>
      </div>
      <div class="input-group">
        <%= form.password_field :password, class: "input", id: "password-input", required: false, autofocus: true, placeholder: "Enter your password", value: @user.password %>
        <div class="input-group-text">
          <button type="button" data-toggle-password='{ "target": "#password-input" }' class="block" aria-label="password toggle">
            <span class="icon-[tabler--eye] text-base-content/80 password-active:block hidden size-5 flex-shrink-0"></span>
            <span class="icon-[tabler--eye-off] text-base-content/80 password-active:hidden block size-5 flex-shrink-0"></span>
          </button>
        </div>
      </div>
    </div>

    <div class="col-span-6 sm:flex sm:items-center sm:gap-4 mt-4">
      <%= form.submit "Login", class: "btn btn-primary btn-block" %>
    </div>

    <p class="text-center mt-4">Don't have an account? <a class="link" href="/register">Register</a></p>
  <% end %>
</div>
